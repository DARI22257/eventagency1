<Window x:Class="eventagency.Tasks"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:eventagency"
        xmlns:vm="clr-namespace:eventagency.VM"
        DataContext="{DynamicResource vm}"
        mc:Ignorable="d"
        Title="Tasks" Height="450" Width="800">
    <Window.Resources>
        <vm:TasksMvvm x:Key="vm"/>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="0" Margin="10" DataContext="{Binding NewTask}">
            <Label Content="Название"/>
            <TextBox Text="{Binding Title}"/>
            <Label Content="Описание"/>
            <TextBox Text="{Binding Description}"/>
            <Label Content="Дата проведения"/>
            <DatePicker Height="20"  DataContext="{Binding Term}"/>
            <Label Content="Руководитель"/>
            <TextBox Text="{Binding Assigned}"/>
            <Label Content="Статус"/>
            <TextBox Text="{Binding Status}"/>
        </StackPanel>

        <ListView Grid.Column="1" ItemsSource="{Binding Tasks}" SelectedItem="{Binding SelectedTask}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Название" DisplayMemberBinding="{Binding Title}" Width="80"/>
                    <GridViewColumn Header="Описание" DisplayMemberBinding="{Binding Description}" Width="120"/>
                    <GridViewColumn Header="Дата проведения" DisplayMemberBinding="{Binding Term}" Width="120"/>
                    <GridViewColumn Header="руководитель" DisplayMemberBinding="{Binding Assigned}" Width="80"/>
                    <GridViewColumn Header="Статус" DisplayMemberBinding="{Binding Status}" Width="80"/>
                </GridView>
            </ListView.View>
            <ListView.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="kjk"/>
                </ContextMenu>
            </ListView.ContextMenu>
        </ListView>


        <StackPanel Grid.Column="0" Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="10">
            <Button Content="Добавить мероприятие" Command="{Binding InsertTask}" Width="150" Height="40" />
        </StackPanel>

        <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="Далее" Width="100" Height="40" Click="GoToNextPage_Click" />
        </StackPanel>
    </Grid>
</Window>
