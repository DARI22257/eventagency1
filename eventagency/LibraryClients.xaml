<Window x:Class="eventagency.LibraryClients"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:eventagency"
        mc:Ignorable="d"
        Title="Library" Height="450" Width="800" Background="LightPink">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Horizontal" Background="MistyRose" Height="20">
            <TextBlock Text="Поиск:"/>
            <TextBox Text="{Binding Search, UpdateSourceTrigger=PropertyChanged}" Width="200"/>
        </StackPanel>


        <!-- Список клиентов -->
        <ListView x:Name="ClientList" Grid.Row="1" ItemsSource="{Binding Clients}" SelectedItem="{Binding SelectedClient}" Background="MistyRose">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ФИО" DisplayMemberBinding="{Binding FullName}" Width="100"/>
                    <GridViewColumn Header="Телефон" DisplayMemberBinding="{Binding Phone}" Width="100"/>
                    <GridViewColumn Header="Email" DisplayMemberBinding="{Binding Email}" Width="100"/>
                    <GridViewColumn Header="Заметки" DisplayMemberBinding="{Binding Notes}" Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>

        <ScrollViewer Grid.Column="1" Grid.Row="1" DataContext="{Binding SelectedOrder}" Background="LavenderBlush">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <StackPanel DataContext="{Binding Event}">
                    <TextBlock Text="{Binding Title}"/>
                    <TextBlock Text="{Binding Date}"/>
                    <TextBlock Text="{Binding Place}"/>
                </StackPanel>

                <StackPanel DataContext="{Binding Task}">
                    <TextBlock Text="{Binding Title}"/>
                    <TextBlock Text="{Binding Term}"/>
                    <TextBlock Text="{Binding Description}"/>
                    <TextBlock Text="{Binding Assigned}"/>
                    <TextBlock Text="{Binding Status}"/>
                </StackPanel>

                <StackPanel DataContext="{Binding Contractor}">
                    <TextBlock Text="{Binding Title}"/>
                    <TextBlock Text="{Binding Type}"/>
                    <TextBlock Text="{Binding Email}"/>
                    <TextBlock Text="{Binding Notes}"/>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
